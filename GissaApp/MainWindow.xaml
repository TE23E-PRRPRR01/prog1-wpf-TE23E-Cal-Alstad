<Window x:Class="GissaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GissaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel>

        <Label Margin="5" FontWeight="Bold" FontSize="24"> Gissa Talet (1-1000) </Label>
        <Label Margin="5" >Ange Gissning: </Label>
        <TextBox Name="txbGissning" Margin="5" ></TextBox>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="KlickGissa" Width="100" Margin="5" >Gissa</Button>
            <Button Click="KlickVisaFacit" Width="100" Margin="5" >Visa Facit</Button>
        </StackPanel>

        <Label Margin="5" >Resultat</Label>
        <TextBox Name="txbResultat" Margin="5" ></TextBox>

        <Label Margin="5" >Gissningshistorik</Label>
        <Button Click="KlickVisaGissningar" Margin="5" Width="150" >Visa Gissningar</Button>
        <TextBox Name="txbGissningar" Margin="5" Height="100"></TextBox>

        <Button Click="KlickStartaOm" Margin="5" Width="150" >Starta om</Button>

    </StackPanel>
</Window>
